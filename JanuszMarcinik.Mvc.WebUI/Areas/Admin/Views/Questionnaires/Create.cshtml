@using JanuszMarcinik.Mvc.WebUI.Areas.Admin.Models.Questionnaires;
@model QuestionnaireViewModel

@{
    ViewBag.Title = "Nowa ankieta";
}

<h2 class="center-block">
    <span class="label label-success center-block">@ViewBag.Title</span>
</h2>

@using (var form = Html.Bootstrap().Begin(new Form()))
{
    using (var panel = Html.Bootstrap().Begin(new Panel()))
    {
        using (panel.BeginBody())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.OrderNumber)

            <div class="row">
                <div class="col-sm-6">
                    @form.FormGroup().TextBoxFor(x => x.Name)
                    @form.FormGroup().CheckBoxFor(x => x.Active)
                    @form.FormGroup().CheckBoxFor(x => x.EditDisable)
                </div>
                <div class="col-sm-6">
                    @form.FormGroup().TextAreaFor(x => x.Description).Rows(4)
                </div>
            </div>
        }

        using (panel.BeginFooter())
        {
            <div class="btn-group">
                @Html.Bootstrap().SubmitSaveButton()
                @Html.Bootstrap().BackButton(MVC.Admin.Questionnaires.List())
            </div>
        }
    }
}